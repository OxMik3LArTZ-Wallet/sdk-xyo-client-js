{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "ignorePatterns": [
    "**/dist",
    "**/node_modules",
    "**/docs",
    "coverage",
    "docker",
    "**/testData.json",
    "swagger.json",
    ".yarn"
  ],
  "rules": {
    "@typescript-eslint/explicit-member-accessibility": ["warn", { "accessibility": "no-public" }],
    "import/no-internal-modules": [
      "warn", {
        "allow": [
          "source-map-support/*",
          "lodash/*",
          "aws-sdk/**/*",
          "types/*"
        ]
      }
    ]
  }
}
